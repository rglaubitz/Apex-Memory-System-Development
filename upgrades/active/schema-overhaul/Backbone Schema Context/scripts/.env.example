# Apex Memory System - Environment Configuration
# Copy this file to .env and update with your actual values

# ==================
# PostgreSQL Configuration
# ==================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=apex_memory
POSTGRES_USER=apex
POSTGRES_PASSWORD=apexmemory2024

# Old database (for data migration)
OLD_POSTGRES_DB=apex_memory_old

# ==================
# Neo4j Configuration
# ==================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=apexmemory2024

# ==================
# Qdrant Configuration
# ==================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Embedding configuration
EMBEDDING_DIMENSION=1536      # OpenAI text-embedding-3-small: 1536, text-embedding-3-large: 3072

# ==================
# Redis Configuration
# ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=                # Leave empty if no password
REDIS_MAX_MEMORY=1gb          # Max memory for Redis cache

# ==================
# Graphiti Configuration
# ==================
# (Future: Add Graphiti-specific config here)

# ==================
# OpenAI API (for embeddings)
# ==================
OPENAI_API_KEY=your_openai_api_key_here

# ==================
# Migration Configuration
# ==================
# Set to 'true' for dry-run mode
DRY_RUN=false

# Batch size for bulk operations
BATCH_SIZE=100
